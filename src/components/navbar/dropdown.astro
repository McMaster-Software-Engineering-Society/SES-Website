---
import { Dropdown as DropdownContainer, DropdownItems } from "astro-navbar";
const { title, lastItem, items } = Astro.props;
---

<li class="relative">
  <DropdownContainer class="group">
    <button
      class="flex items-center gap-1 w-full lg:w-auto lg:px-3 py-2 text-slate-400 hover:text-slate-500">
      <span>{title}</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="3"
        stroke="currentColor"
        class="w-3 h-3 mt-0.5 group-open:rotate-180">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
      </svg>
    </button>
    <DropdownItems>
      <div
        class:list={[
          "lg:absolute w-full lg:w-48",
          lastItem
            ? "lg:right-0 origin-top-right"
            : "lg:left-0 origin-top-left",
        ]}>
        <div
          class="px-3 lg:py-2 lg:bg-slate-900 lg:rounded-md lg:shadow lg:border border-slate-800 flex flex-col z-[98] relative">
          {
            items.map((item) => (
              <>
                <a
                  href={item.path}
                  class="py-1 text-slate-400 hover:text-slate-500">
                  {item.title}
                </a>
                {item.children && (
                  <div class="flex flex-col">
                    {item.children.map((child) => (
                      <a
                        href={child.path}
                        class="py-1 text-slate-400 hover:text-slate-500 ml-3">
                        {child.title}
                      </a>
                    ))}
                  </div>
                )}
              </>
            ))
          }
        </div>
      </div>
    </DropdownItems>
  </DropdownContainer>
</li>
