---
import Container from "@components/container.astro";
import Layout from "./Layout.astro";
import MarkdownContainer from "@components/markdown-container.astro";

export interface Props {
  title: string;
  class?: string;
}

const { title, class: className } = Astro.props;
---

<Layout title={title}>
  <MarkdownContainer class={className}>
    <slot />
  </MarkdownContainer>
</Layout>
